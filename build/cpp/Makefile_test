START=../../src/main/cpp/plazma/lib
SOURCES:=$(wildcard $(START)/**/*.cpp) $(wildcard $(START)/**/**/*.cpp)
SOURCES:=$(filter-out $(START)/task/run.cpp, $(SOURCES))

OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=run_test

all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
